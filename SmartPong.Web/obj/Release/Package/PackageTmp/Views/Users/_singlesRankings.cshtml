@model IEnumerable<SmartPong.Models.View.UserRankingViewModel>

<table id="individual" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Name</th>
            <th>Rating</th>
            <th>Skill</th>
            <th>Variance</th>
            <th>Activity Date</th>
        </tr>
    </thead>
    <tbody>
        @{int ranking = 1;}

        @foreach (var item in Model)
        {
            <tr>
                <td>@ranking.ToString()</td>
                <td>@Html.ActionLink(item.DisplayName, "Profiles", "Users", new { id = item.UserId }, null)</td>
                <td>@string.Format("{0:0.000}", item.Rating)</td>
                <td>@string.Format("{0:0.000}", item.Skill)</td>
                <td>@string.Format("{0:0.000}", item.Variance)</td>
                <td>@Html.DisplayFor(modelItem => item.ActivityDate)</td>
            </tr>
            ranking++;
        }
    </tbody>
</table>